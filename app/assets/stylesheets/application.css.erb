 @font-face {
   font-family: 'iconsmind';
   src: url('<%= asset_path("iconsmind.eot") %>');
   src: url('<%= asset_path("iconsmind.eot#iefix") %>') format('embedded-opentype'),
        url('<%= asset_path("iconsmind.woff") %>') format('woff'),
        url('<%= asset_path("iconsmind.ttf") %>') format('truetype');
    font-weight: normal;
   	font-style: normal;
 }



 @font-face {
   font-family: 'socicon';
   src: url('<%= asset_path("socicon.eot") %>');
   src: url('<%= asset_path("socicon.eot#iefix") %>') format('embedded-opentype'),
        url('<%= asset_path("socicon.woff") %>') format('woff'),
        url('<%= asset_path("socicon.ttf") %>') format('truetype'),
        url('<%= asset_path("socicon.svg") %>') format('svg');
    font-weight: normal;
   	font-style: normal;
 }



 @font-face {
