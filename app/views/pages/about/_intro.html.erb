<section id="intro" class=" feature-large">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-9">
        <h4 class="color--orange title-font-alt">About</h4>
        <hr class="" style="width: 20%;"/>
        <h1 class="color--orange">RISE for boys and men of color is an
          interdiscplinary field advancement effort.</h1>
        <div class="row">
          <div class="col-sm-12 col-md-9">
            <h4 class="">
              We aim to understand and strategically improve the lives,
              experiences, and outcomes of boys and men of color in the United States.
            </h4>
          </div>
        </div>
        <br/>
        <h3 class="no-margin btn">Watch Video</h3>
      </div>
    </div>
  </section>
  <section class="">
    <div class="row text-center">
      <div class="col-sm-12 col-md-12">
        <div class="video-cover border--round height-60 box-shadow">
          <div class="background-image-holder">
              <%= image_tag("rise_assets/home/hero/image/image@2x.png")%>
          </div>
          <div class="modal-instance">
            <div class="modal-container">
              <div class="modal-content bg-dark" data-width="100%" data-height="60%">
                <iframe src="https://www.youtube.com/embed/fyqR28x0-Wo" allowfullscreen="allowfullscreen"></iframe>
              </div>
              <!--end of modal-content-->
            </div>
            <!--end of modal-container-->
            <div class="video-play-icon video-play-icon--lg modal-trigger">
            </div>

          </div>
          <iframe src="https://www.youtube.com/watch?v=fyqR28x0-Wo&feature=youtu.be" allowfullscreen="allowfullscreen"></iframe>
        </div>
      </div>
    </div>
  </section>
  <section class="switchable feature-large">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
              <br/><br/><br/>
              <div class="imagebg height-20 border--round bg-gradient-issue-brief-post" data-overlay="6">
                <div class="background-image-holder  box-shadow">
                  <%= image_tag("rise_assets/about/about-1.png", class: "border--round box-shadow-wide")%>
                </div>
              </div>
            </div>
            <div class="col-sm-6 col-md-5">
                <div class="switchable__text">
                  <h4 class="color--orange title-font-alt">our focus</h4>
                  <hr class="" style="width: 20%;"/>
                    <h2 class="color--orange">We focus on 4 populations</h2>
                    <h4 class="">
                      Asian Americans and Pacific Islanders, Blacks, Latinos, and Native Americans
                    </h4>
                </div>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
<section class="space--sm switchable switchable--switch">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
              <br/><br/><br/>
              <div class="imagebg height-20 border--round bg-gradient-issue-brief-post" data-overlay="6">
                <div class="background-image-holder box-shadow">
                  <%= image_tag("rise_assets/about/about-2.png", class: "border--round box-shadow-wide")%>
                </div>
              </div>
            </div>
            <div class="col-sm-6 col-md-5">
              <div class="switchable__text">
                <h4 class="color--orange title-font-alt">Our Research</h4>
                <hr class="" style="width: 20%;"/>
                <h2 class="color--orange">Our research spans five domains</h2>
                <h4 class="">
                  Education, health, human services and social policy, juvenile and criminal justice, and workforce development.
                </h4>
              </div>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
