    <div class="masonry__item col-sm-4" data-masonry-filter="White, Men, U.S., Age: 18+">
      <article class="feature feature-1">
        <div class="card card-1 boxed boxed--sm boxed--border box-shadow-light">
          <div class="card__top">
          </div>
          <div class="card__body">
            <a href="<%= image_url("data-center/justice/1.png")%>" data-lightbox="true">
